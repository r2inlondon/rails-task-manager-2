<div class="container mt-5">
    
  <h1><%= @task.title %></h1>
  <h3 class="breadcrumb"><%= @task.details%></h3>
  <p>
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    Task completed
  </p>

<div class="d-flex">
  <div class="pr-4">
    <%= link_to edit_path do  %>
      <i class="far fa-edit"></i> Edit Task
    <% end %>
  </div>
  <div class="pr-4">
    <%= link_to tasks_path do%>
      <i class="fas fa-undo"></i> Back to Index
    <%end %>
  </div>
  <div>
    <%# <%= link_to "Delete", delete_path  %>
    <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure?" } do%>
    <i class="far fa-trash-alt"></i> Delete
  <% end %>
  </div>
</div>
  
</div>