<div class="container">
    
  <h1><%= @task.title %></h1>
  <h3 class="breadcrumb"><%= @task.details%></h3>
  <p>
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    Task completed
  </p>

<div class="d-flex">
  <div class="pr-4">
    <%= link_to "Edit task", edit_path  %>
  </div>
  <div class="pr-4">
    <%= link_to 'Back to Index', tasks_path %>
  </div>
  <div>
    <%# <%= link_to "Delete", delete_path  %>
    <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure?" } do%>
    <i class="far fa-trash-alt"></i>
  <% end %>
  </div>
</div>
  
</div>